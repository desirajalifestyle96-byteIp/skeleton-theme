{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-magazine-layout-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-magazine-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-hero-{{ ai_gen_id }} {
    grid-column: 1 / 9;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-magazine-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: 16 / 10;
  }

  .ai-magazine-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 16 / 10;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-magazine-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-hero-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: {{ block.settings.hero_text_color }};
  }

  .ai-magazine-category-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 12px;
    color: {{ block.settings.category_color }};
    font-weight: 600;
  }

  .ai-magazine-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    line-height: 1.2;
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-magazine-hero-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_excerpt_size }}px;
    line-height: 1.6;
    margin: 0 0 16px;
    opacity: 0.95;
  }

  .ai-magazine-hero-meta-{{ ai_gen_id }} {
    font-size: 14px;
    opacity: 0.85;
  }

  .ai-magazine-sidebar-{{ ai_gen_id }} {
    grid-column: 9 / 13;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 20px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-magazine-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 180px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-card-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-magazine-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    line-height: 1.3;
    margin: 0;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-magazine-card-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_excerpt_size }}px;
    line-height: 1.5;
    margin: 0;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-magazine-card-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-magazine-bottom-{{ ai_gen_id }} {
    grid-column: 1 / 13;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-feature-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-magazine-feature-image-{{ ai_gen_id }} {
    width: 100%;
    height: 240px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-magazine-feature-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 240px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-magazine-feature-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-feature-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-magazine-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    line-height: 1.3;
    margin: 0;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-magazine-feature-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_excerpt_size }}px;
    line-height: 1.5;
    margin: 0;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-magazine-feature-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-magazine-hero-{{ ai_gen_id }} {
      grid-column: 1 / 13;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      grid-column: 1 / 13;
      flex-direction: row;
    }

    .ai-magazine-card-{{ ai_gen_id }} {
      flex: 1;
    }

    .ai-magazine-bottom-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-magazine-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-magazine-hero-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-magazine-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.7 }}px;
    }

    .ai-magazine-hero-excerpt-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_excerpt_size | times: 0.9 }}px;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      flex-direction: column;
    }
  }
{% endstyle %}

<div class="ai-magazine-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-magazine-grid-{{ ai_gen_id }}">
    <div class="ai-magazine-hero-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 1200 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          class="ai-magazine-hero-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-magazine-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-magazine-hero-content-{{ ai_gen_id }}">
        {% if block.settings.hero_category != blank %}
          <div class="ai-magazine-category-{{ ai_gen_id }}">{{ block.settings.hero_category }}</div>
        {% endif %}
        {% if block.settings.hero_title != blank %}
          <h2 class="ai-magazine-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h2>
        {% endif %}
        {% if block.settings.hero_excerpt != blank %}
          <p class="ai-magazine-hero-excerpt-{{ ai_gen_id }}">{{ block.settings.hero_excerpt }}</p>
        {% endif %}
        {% if block.settings.hero_author != blank or block.settings.hero_date != blank %}
          <div class="ai-magazine-hero-meta-{{ ai_gen_id }}">
            {% if block.settings.hero_author != blank %}
              {{ block.settings.hero_author }}
            {% endif %}
            {% if block.settings.hero_author != blank and block.settings.hero_date != blank %}
              •
            {% endif %}
            {% if block.settings.hero_date != blank %}
              {{ block.settings.hero_date }}
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-magazine-sidebar-{{ ai_gen_id }}">
      {% for i in (1..2) %}
        {% liquid
          assign card_image_key = 'card_' | append: i | append: '_image'
          assign card_category_key = 'card_' | append: i | append: '_category'
          assign card_title_key = 'card_' | append: i | append: '_title'
          assign card_excerpt_key = 'card_' | append: i | append: '_excerpt'
          assign card_author_key = 'card_' | append: i | append: '_author'
          assign card_date_key = 'card_' | append: i | append: '_date'

          assign card_image = block.settings[card_image_key]
          assign card_category = block.settings[card_category_key]
          assign card_title = block.settings[card_title_key]
          assign card_excerpt = block.settings[card_excerpt_key]
          assign card_author = block.settings[card_author_key]
          assign card_date = block.settings[card_date_key]
        %}

        <div class="ai-magazine-card-{{ ai_gen_id }}">
          {% if card_image %}
            <img
              src="{{ card_image | image_url: width: 600 }}"
              alt="{{ card_image.alt | escape }}"
              class="ai-magazine-card-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ card_image.width }}"
              height="{{ card_image.height }}"
            >
          {% else %}
            <div class="ai-magazine-card-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
          <div class="ai-magazine-card-content-{{ ai_gen_id }}">
            {% if card_category != blank %}
              <div class="ai-magazine-category-{{ ai_gen_id }}">{{ card_category }}</div>
            {% endif %}
            {% if card_title != blank %}
              <h3 class="ai-magazine-card-title-{{ ai_gen_id }}">{{ card_title }}</h3>
            {% endif %}
            {% if card_excerpt != blank %}
              <p class="ai-magazine-card-excerpt-{{ ai_gen_id }}">{{ card_excerpt }}</p>
            {% endif %}
            {% if card_author != blank or card_date != blank %}
              <div class="ai-magazine-card-meta-{{ ai_gen_id }}">
                {% if card_author != blank %}
                  {{ card_author }}
                {% endif %}
                {% if card_author != blank and card_date != blank %}
                  •
                {% endif %}
                {% if card_date != blank %}
                  {{ card_date }}
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="ai-magazine-bottom-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign feature_image_key = 'feature_' | append: i | append: '_image'
          assign feature_category_key = 'feature_' | append: i | append: '_category'
          assign feature_title_key = 'feature_' | append: i | append: '_title'
          assign feature_excerpt_key = 'feature_' | append: i | append: '_excerpt'
          assign feature_author_key = 'feature_' | append: i | append: '_author'
          assign feature_date_key = 'feature_' | append: i | append: '_date'

          assign feature_image = block.settings[feature_image_key]
          assign feature_category = block.settings[feature_category_key]
          assign feature_title = block.settings[feature_title_key]
          assign feature_excerpt = block.settings[feature_excerpt_key]
          assign feature_author = block.settings[feature_author_key]
          assign feature_date = block.settings[feature_date_key]
        %}

        <div class="ai-magazine-feature-{{ ai_gen_id }}">
          {% if feature_image %}
            <img
              src="{{ feature_image | image_url: width: 800 }}"
              alt="{{ feature_image.alt | escape }}"
              class="ai-magazine-feature-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ feature_image.width }}"
              height="{{ feature_image.height }}"
            >
          {% else %}
            <div class="ai-magazine-feature-placeholder-{{ ai_gen_id }}">
              {{ 'collection-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
          <div class="ai-magazine-feature-content-{{ ai_gen_id }}">
            {% if feature_category != blank %}
              <div class="ai-magazine-category-{{ ai_gen_id }}">{{ feature_category }}</div>
            {% endif %}
            {% if feature_title != blank %}
              <h3 class="ai-magazine-feature-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
            {% endif %}
            {% if feature_excerpt != blank %}
              <p class="ai-magazine-feature-excerpt-{{ ai_gen_id }}">{{ feature_excerpt }}</p>
            {% endif %}
            {% if feature_author != blank or feature_date != blank %}
              <div class="ai-magazine-feature-meta-{{ ai_gen_id }}">
                {% if feature_author != blank %}
                  {{ feature_author }}
                {% endif %}
                {% if feature_author != blank and feature_date != blank %}
                  •
                {% endif %}
                {% if feature_date != blank %}
                  {{ feature_date }}
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

